<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Waste Collection Schedule</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 18px;
      text-align: left;
    }
    th, td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
    }
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
    tr:hover {
      background-color: #ddd;
      transform: scale(1.02);
      transition: all 0.3s ease-in-out;
    }
    th {
      background-color: #4caf50;
      color: white;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    table {
      animation: fadeIn 1s ease-in-out;
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-900">
  <header id="header" class="bg-green-100 shadow-md w-full z-10 ">
    <div class="container mx-auto flex items-center justify-between px-4 py-4 bg-green-100">
      
      <!-- Logo -->
      <div id="logo" class="flex items-center space-x-2">
        <!-- Change "ss.png" to your logo file path -->
        <img src="./images/ss.png" alt="Logo" class="h-10 w-10 object-cover">
        <span class="font-bold text-lg text-gray-800">TrashOnline</span>
      </div>

      <!-- Navigation Menu -->
    
      <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
        <a class="mr-5 nav-link hover-underline" href="home">Home</a>
        <a class="mr-5 nav-link hover-underline" href="index">Schedule Pickup</a>
        <a class="mr-5 nav-link hover-underline" href="waste">Waste Details</a>
        <a class="mr-5 nav-link hover-underline" href="blogpost">Blogs</a>
        <a class="mr-5 nav-link hover-underline" href="contacts">Contact Us</a>
    </nav>
        
    </div>
  </header>

  <div class="container mx-auto mt-10">
    <h2 class="text-3xl font-bold text-center mb-6">Scheduled Waste Collections</h2>
    <div class="overflow-x-auto">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Time</th>
            <th>Location</th>
            <th>Waste Type</th>
            <th>Collector Type</th>
            <th>Weather</th>
            <th>Weight (kg)</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% schedules.forEach(schedule => { %>
          <tr>
            <td><%= schedule.name %></td>
            <td><%= schedule.contact %></td>
            <td><%= schedule.time %></td>
            <td><%= schedule.location %></td>
            <td><%= schedule.wasteType %></td>
            <td><%= schedule.collectorType %></td>
            <td><%= schedule.weather %></td>
            <td><%= schedule.weight %></td>
            <td><%= schedule.notes %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="flex justify-center mt-6">
      <button id="downloadPdf" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
        Download PDF
      </button>
    </div>
    <div class="flex justify-center mt-4">
      <a href="/" class="text-blue-500 hover:underline">Schedule Another</a>
    </div>
  </div>

  <script>
    document.getElementById('downloadPdf').addEventListener('click', function () {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();

      doc.text('Scheduled Waste Collections', 10, 10);

      const table = document.querySelector('table');
      const rows = Array.from(table.querySelectorAll('tr')).map(row => {
        return Array.from(row.querySelectorAll('th, td')).map(cell => cell.innerText);
      });

      doc.autoTable({
        head: [rows[0]],
        body: rows.slice(1),
      });

      doc.save('Waste_Collection_Schedule.pdf');
    });
  </script>
</body>
</html>
