<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .transition-all {
            transition: all 0.3s ease;
        }

        .hover\:scale-105:hover {
            transform: scale(1.05);
        }body {
            background-image: url('https://cdn.pixabay.com/photo/2016/11/29/04/17/checklist-1867744_1280.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .bg-custom {
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background */
        }
        .gradient-bg {
            background: linear-gradient(90deg, rgba(58,123,213,1) 0%, rgba(0,210,255,1) 100%);
            transition: background 0.3s ease;
        }
        .gradient-bg:hover {
            background: linear-gradient(90deg, rgba(0,210,255,1) 0%, rgba(58,123,213,1) 100%);
        }
        .fitconnect-logo {
            width: 100px;
            height: auto;
            display: block;
            margin: 0 auto 20px;
        }
        .hover-shadow-lg:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .hover-shadow-lg {
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .dropdown-enter-active,
        .dropdown-leave-active {
            transition: opacity 0.5s, transform 0.5s;
        }
        .dropdown-enter,
        .dropdown-leave-to {
            opacity: 0;
            transform: translateY(-20px);
        }


        
    </style>
</head>

<body class="bg-gray-100">
 <header class="text-gray-600 body-font rounded-md gradient-bg">

    <!-- w-full text-white px-4 py-2 rounded-md gradient-bg -->
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
        <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
            <img src="https://img.icons8.com/color/96/factory.png" alt="TrashOnline Logo" class="w-10 h-10">
            <span class="ml-3 text-2xl font-semibold">TrashOnline</span>
        </a>
        <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
            <a class="mr-5 nav-link hover-underline" href="home">Home</a>
            <a class="mr-5 nav-link hover-underline" href="schedule-pickup">Schedule Pickup</a>
            <a class="mr-5 nav-link hover-underline" href="waste">Waste Details</a>
            <a class="nav-link hover-underline" href="contacts">Contact Us</a>
        </nav>
    </div>
</header>

    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-custom p-12 rounded-lg shadow-lg w-full max-w-lg">
            <img src="https://img.icons8.com/color/96/factory.png" alt="TrashOnline" class="fitconnect-logo items-center">
            <h2 class="text-3xl font-bold mb-6 text-blue-900 text-center">Register</h2>
            <form action="/register" method="POST">
                <div class="mb-4">
                    <label for="name" class="block text-gray-700">Full Name</label>
                    <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-all" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-all" required>
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-700">Password</label>
                    <input type="password" id="password" name="password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-all" required>
                </div>
                <div class="mb-4">
                    <label for="phone" class="block text-gray-700">Phone</label>
                    <input type="text" id="phone" name="phone" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-all" required>
                </div>
                <div class="mb-4">
                    <label for="address" class="block text-gray-700">Address</label>
                    <input type="text" id="address" name="address" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-all" required>
                </div>
                <button type="submit" class="w-full text-white px-4 py-2 rounded-md gradient-bg">Register</button>
            </form>
        </div>
    </div>

    <script>
       
        const menuButton = document.getElementById("menuButton");
        const dropdown = document.getElementById("dropdown");

        menuButton.addEventListener("click", function () {
        
            dropdown.classList.toggle("hidden");
        });

      
        window.addEventListener("click", function (e) {
            if (!menuButton.contains(e.target) && !dropdown.contains(e.target)) {
                dropdown.classList.add("hidden");
            }
        });
    </script>
</body>

</html>