<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locality Trash Pickup</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .hover-underline:hover {
            text-decoration: underline;
        }

        .gradient-bg {
            background: linear-gradient(90deg, #fafafa, #c4dcea);
        }

        .nav-link:hover {
            color: #64FFDA;
            transition: color 0.3s;
        }

        .fade-in {
            animation: fadeIn 1.5s ease-in-out forwards;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body class="bg-gray-100 gradient-bg fade-in">
    <header class="text-gray-600 body-font bg-green-300">
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                <img src="https://img.icons8.com/color/96/factory.png" alt="TrashOnline Logo" class="w-10 h-10">
                <span class="ml-3 text-2xl font-semibold">TrashOnline</span>
            </a>
            <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
                <a class="mr-5 nav-link hover-underline" href="home">Home</a>
                <a class="mr-5 nav-link hover-underline" href="schedule-pickup">Schedule Pickup</a>
                <a class="mr-5 nav-link hover-underline" href="waste">Waste Details</a>
                <a class="mr-5 nav-link hover-underline" href="blogpost">Blogs</a>
                <a class="mr-5 nav-link hover-underline" href="contacts">Contact Us</a>
                
            </nav>
        </div>
    </header>
    <main class="container mx-auto my-10 p-5">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Locality Trash Pickup</h1>
        <p class="text-gray-600 text-center mb-8">Fill in the details below to schedule your locality trash pickup.</p>
        <form action="#" method="POST" class="w-full max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="user-name">Your Name</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="user-name" type="text" placeholder="Your Name" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="user-address">Address</label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="user-address" rows="3" placeholder="Your Address" required></textarea>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="waste-type">Type of Waste</label>
                <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="waste-type" required>
                    <option>Household Waste</option>
                    <option>Recyclables</option>
                    <option>Garden Waste</option>
                    <option>Hazardous Waste</option>
                    <option>Bulk Items</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="pickup-date">Pickup Date</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="pickup-date" type="date" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="pickup-time">Preferred Pickup Time</label>
                <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="pickup-time" required>
                    <option>Morning (7 AM - 9 AM)</option>
                    <option>Midday (12 PM - 2 PM)</option>
                    <option>Afternoon (3 PM - 5 PM)</option>
                    <option>Evening (6 PM - 8 PM)</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="instructions">Special Instructions</label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="instructions" rows="3" placeholder="Any special instructions"></textarea>
            </div>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" type="submit">
                Schedule Pickup
            </button>
        </form>
    </main>

    <footer class="text-center text-gray-600 mt-10 py-4 border-t">
        Â© 2025 TrashOnline. All rights reserved.
    </footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");
    form.addEventListener("submit", function (event) {
        event.preventDefault();
        
        const userName = document.getElementById("user-name").value;
        const userAddress = document.getElementById("user-address").value;
        const wasteType = document.getElementById("waste-type").value;
        const pickupDate = document.getElementById("pickup-date").value;
        const pickupTime = document.getElementById("pickup-time").value;
        const instructions = document.getElementById("instructions").value;

        const cardContainer = document.createElement("div");
        cardContainer.className = "bg-white p-6 rounded-lg shadow-lg mt-6";

        const cardContent = `
            <h2 class="text-xl font-bold mb-2">Pickup Details</h2>
            <p><strong>Name:</strong> ${userName}</p>
            <p><strong>Address:</strong> ${userAddress}</p>
            <p><strong>Waste Type:</strong> ${wasteType}</p>
            <p><strong>Pickup Date:</strong> ${pickupDate}</p>
            <p><strong>Pickup Time:</strong> ${pickupTime}</p>
            <p><strong>Instructions:</strong> ${instructions}</p>
        `;

        cardContainer.innerHTML = cardContent;
        document.body.appendChild(cardContainer);
    });
});

    </script>
</body>
</html>
