<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="./images/ss.png" type="image/x-icon">
    <title>Subscription Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
    <style>
        /* Existing styles ... */

        .card {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .reward-card {
            background-color: #f0fff4;
        }

        .dashboard-card {
            background-color: #f0faff;
        }

        .subscribe-card {
            background-color: #fff7e3;
        }

        /* Popup Styles */
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            max-width: 500px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            z-index: 1000;
        }

        .popup-header {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .popup-content {
            margin-bottom: 20px;
        }

        .popup-close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    </style>
</head>
<body class="bg-gray-100">
    <header id="header" class="bg-green-100 shadow-md w-full z-10">
        <div class="container mx-auto flex items-center justify-between px-4 py-4 bg-green-100">
            <div id="logo" class="flex items-center space-x-2">
                <img src="./images/ss.png" alt="Logo" class="h-10 w-10 object-cover">
                <span class="font-bold text-lg text-gray-800">TrashOnline</span>
            </div>
            <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
                <a class="mr-5 nav-link hover-underline" href="home">Home</a>
                <a class="mr-5 nav-link hover-underline" href="index">Schedule Pickup</a>
                <a class="mr-5 nav-link hover-underline" href="waste">Waste Details</a>
                <a class="mr-5 nav-link hover-underline" href="blogpost">Blogs</a>
                <a class="mr-5 nav-link hover-underline" href="dashboard">Dashboard</a>
                <a class="mr-5 nav-link hover-underline" href="contacts">Contact Us</a>
                <a class="mr-5 nav-link hover-underline" href="logout">logout</a>
            </nav>
        </div>
    </header>

    <!-- Dashboard Section -->
    <div class="container mx-auto my-5 p-5 bg-white rounded-lg shadow-md card dashboard-card">
        <h2 class="text-3xl font-bold mb-4 text-center text-blue-500">Dashboard</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="p-4 border border-gray-300 rounded bg-blue-50">
                <h3 class="text-xl font-semibold">Total Waste Managed</h3>
                <p class="text-lg mt-2">200 kg</p>
            </div>
            <div class="p-4 border border-gray-300 rounded bg-blue-50">
                <h3 class="text-xl font-semibold">Collections Scheduled</h3>
                <p class="text-lg mt-2">15</p>
            </div>
            <div class="p-4 border border-gray-300 rounded bg-blue-50">
                <h3 class="text-xl font-semibold">Top Category</h3>
                <p class="text-lg mt-2">Plastic</p>
            </div>
        </div>
    </div>

    <!-- Rewards Section -->
    <div class="container mx-auto my-5 p-5 bg-white rounded-lg shadow-md card reward-card">
        <h2 class="text-3xl font-bold mb-4 text-center text-green-500">Rewards</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="p-4 border border-gray-300 rounded bg-green-50">
                <h3 class="text-xl font-semibold">Current Points</h3>
                <p class="text-lg mt-2">1200</p>
            </div>
            <div class="p-4 border border-gray-300 rounded bg-green-50">
                <h3 class="text-xl font-semibold">Redeemable Rewards</h3>
                <ul class="mt-2 list-disc pl-5">
                    <li>Free Recycling Bag (500 Points)</li>
                    <li>Discount Coupon (1000 Points)</li>
                    <li>Reusable Bottle (1500 Points)</li>
                </ul>
            </div>
        </div>
        <div class="text-center mt-5">
            <button class="px-6 py-2 bg-green-500 text-white rounded">Redeem Points</button>
        </div>
    </div>

       <!-- Subscription Section -->
       <div class="container mx-auto my-5 p-5 bg-white rounded-lg shadow-md card subscribe-card">
        <h2 class="text-3xl font-bold mb-4 text-center text-yellow-500">Subscription Packs</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="p-4 border border-gray-300 rounded bg-yellow-50">
                <h3 class="text-xl font-semibold">Basic Pack</h3>
                <p class="text-lg mt-2">NRs 500/month</p>
                <button class="px-4 py-2 bg-yellow-500 text-white rounded mt-3" onclick="subscribe('Basic Pack')">Subscribe</button>
            </div>
            <div class="p-4 border border-gray-300 rounded bg-yellow-50">
                <h3 class="text-xl font-semibold">Standard Pack</h3>
                <p class="text-lg mt-2">NRs 1000/month</p>
                <button class="px-4 py-2 bg-yellow-500 text-white rounded mt-3" onclick="subscribe('Standard Pack')">Subscribe</button>
            </div>
            <div class="p-4 border border-gray-300 rounded bg-yellow-50">
                <h3 class="text-xl font-semibold">Premium Pack</h3>
                <p class="text-lg mt-2">NRs 2000/month</p>
                <button class="px-4 py-2 bg-yellow-500 text-white rounded mt-3" onclick="subscribe('Premium Pack')">Subscribe</button>
            </div>
        </div>
        <div id="subscribed-content" class="hidden mt-5 bg-yellow-50 p-4 rounded">
            <h3 class="text-2xl font-bold text-yellow-600">Thank you for subscribing!</h3>
            <p class="mt-2 text-yellow-700">You have successfully subscribed to the <span id="pack-name"></span>.</p>
            <p class="mt-2 text-yellow-700">Enjoy exclusive benefits and content.</p>
            <!-- Popup -->
    <div class="overlay" id="overlay"></div>
    <div class="popup" id="popup">
        <span class="popup-close" onclick="closePopup()">&times;</span>
        <div class="popup-header">Payment Successful!</div>
        <div class="popup-content">Thank you for your payment. You have successfully subscribed to <span id="popup-pack-name"></span>.</div>
    </div>

    <footer class="text-gray-600 body-font bg-green-300 mt-5">
       <!-- Footer content... -->
    </footer>
    <script>
        // Mock payment form script
function processPayment() {
    let cardNumber = document.getElementById('card-number').value;
    let expiryDate = document.getElementById('expiry-date').value;
    let cvv = document.getElementById('cvv').value;
    let cardHolder = document.getElementById('card-holder').value;

    if (cardNumber && expiryDate && cvv && cardHolder) {
        showPopup(); // Show popup on simulation of successful payment
    } else {
        alert('Please fill out all fields.');
    }
}

// Subscription process script
function subscribe(packName) {
    document.getElementById('subscribed-content').classList.remove('hidden');
    document.getElementById('pack-name').innerText = packName;
}

// Show popup function
function showPopup() {
    document.getElementById('popup-pack-name').innerText = document.getElementById('pack-name').innerText;
    document.getElementById('overlay').style.display = 'block';
    document.getElementById('popup').style.display = 'block';
}

// Close popup function
function closePopup() {
    document.getElementById('overlay').style.display = 'none';
    document.getElementById('popup').style.display = 'none';
}

    </script>
    </body>
    </html>